<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_edit_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp"
            app:cardBackgroundColor="@color/info_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="✏️ Editing workout details"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Workout Name Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_edit_workout_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Workout Name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_edit_info"
            app:startIconDrawable="@drawable/baseline_display_settings_24"
            app:startIconTint="@color/primary_color"
            app:helperText="Required"
            app:helperTextTextColor="@color/text_secondary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_edit_workout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"
                tools:text="Full-Body Strength Training" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Workout Description Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_edit_workout_description"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_edit_workout_name"
            app:counterEnabled="true"
            app:counterMaxLength="500"
            app:helperText="Required"
            app:helperTextTextColor="@color/text_secondary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_edit_workout_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:lines="4"
                android:minLines="3"
                android:maxLines="8"
                android:scrollbars="vertical"
                tools:text="Complete workout targeting all major muscle groups with compound exercises" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Equipment Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_edit_workout_equipment"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Equipment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_edit_workout_description"
            app:startIconDrawable="@drawable/baseline_display_settings_24"
            app:startIconTint="@color/primary_color"
            app:helperText="Required"
            app:helperTextTextColor="@color/text_secondary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_edit_workout_equipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                tools:text="Dumbbells, Resistance Bands" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Duration Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_edit_workout_duration"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Duration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_edit_workout_equipment"
            app:startIconDrawable="@drawable/baseline_access_time_24"
            app:startIconTint="@color/primary_color"
            app:suffixText="minutes"
            app:helperText="Required"
            app:helperTextTextColor="@color/text_secondary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_edit_workout_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="3"
                tools:text="30" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Divider -->
        <View
            android:id="@+id/divider_actions"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="@color/divider_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_edit_workout_duration" />

        <!-- Action Buttons Section -->
        <TextView
            android:id="@+id/tv_actions_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Actions"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_actions" />

        <!-- Update Button (Primary) -->
        <Button
            android:id="@+id/btn_update_workout"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="Update Workout"
            android:textSize="16sp"
            android:textStyle="bold"
            app:icon="@drawable/baseline_check_24"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_actions_label" />

        <!-- Cancel Button (Secondary) -->
        <Button
            android:id="@+id/btn_cancel"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="Cancel"
            android:textColor="@color/text_secondary"
            app:strokeColor="@color/text_secondary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_update_workout" />

        <!-- Progress Indicator (Initially Hidden) -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/btn_update_workout"
            app:layout_constraintEnd_toEndOf="@+id/btn_update_workout"
            app:layout_constraintStart_toStartOf="@+id/btn_update_workout"
            app:layout_constraintTop_toTopOf="@+id/btn_update_workout"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Workout Information Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_workout_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@color/card_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Workout Name -->
                <TextView
                    android:id="@+id/tv_detail_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Workout Name"
                    android:textColor="@color/text_primary"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.01"
                    tools:text="Full-Body Strength Training" />

                <!-- Workout Description -->
                <TextView
                    android:id="@+id/tv_detail_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Description"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    tools:text="Complete workout targeting all major muscle groups with compound exercises and progressive overload" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/divider_color" />

                <!-- Equipment Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_display_settings_24"
                        android:contentDescription="Equipment Icon"
                        app:tint="@color/primary_color" />

                    <TextView
                        android:id="@+id/tv_detail_equipment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Equipment: Dumbbells"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        tools:text="Equipment: Dumbbells, Resistance Bands" />

                </LinearLayout>

                <!-- Duration Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_access_time_24"
                        android:contentDescription="Duration Icon"
                        app:tint="@color/primary_color" />

                    <TextView
                        android:id="@+id/tv_detail_duration"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Duration: 30 minutes"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        tools:text="Duration: 45 minutes" />

                </LinearLayout>

                <!-- Location Row -->
                <LinearLayout
                    android:id="@+id/layout_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_add_location_24"
                        android:contentDescription="Location Icon"
                        app:tint="@color/primary_color" />

                    <TextView
                        android:id="@+id/tv_detail_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Location: Not set"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        tools:text="Location: University Gym" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Completion Status Badge (Initially Hidden) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_completed_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/success_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_workout_info"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/baseline_check_24"
                    android:contentDescription="Completed"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Completed"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Actions Section Label -->
        <TextView
            android:id="@+id/tv_actions_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Actions"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_completed_badge" />

        <!-- Mark Complete/Incomplete Button -->
        <Button
            android:id="@+id/btn_mark_complete"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:text="Mark as Complete"
            android:textSize="15sp"
            app:icon="@drawable/baseline_check_24"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_actions_label" />

        <!-- Delegate via SMS Button -->
        <Button
            android:id="@+id/btn_delegate"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:text="Delegate via SMS"
            android:textColor="@color/primary_color"
            android:textSize="15sp"
            app:icon="@drawable/baseline_cancel_schedule_send_24"
            app:iconGravity="textStart"
            app:iconTint="@color/primary_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_mark_complete"
            app:strokeColor="@color/primary_color" />

        <!-- View on Map Button (Initially Hidden) -->
        <Button
            android:id="@+id/btn_view_map"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="View on Map"
            android:textColor="@color/primary_color"
            android:textSize="15sp"
            android:visibility="gone"
            app:icon="@drawable/baseline_10mp_24"
            app:iconGravity="textStart"
            app:iconTint="@color/primary_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_delegate"
            app:strokeColor="@color/primary_color"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
